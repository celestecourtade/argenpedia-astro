---
const {
  title,
  items = [],
  bodyBgColor = "#2ecc71",
  cardBgColor = "#ffffff", // nuevo color por defecto para las cards
} = Astro.props;
---

<section class="natural-section" style={`background-color: ${bodyBgColor}`}>
  <h1>{title}</h1>
  <div class="grid">
    {items.map((item, index) => (
      <div
        class="card"
        key={index}
        style={`background-color: ${item.color || cardBgColor}`}  // usa el color especÃ­fico si existe, o el general
      >
        <img src={item.image} alt={item.title} />
        <div class="content">
          <h3>{item.title}</h3>
          <p>{item.text}</p>
        </div>
      </div>
    ))}
  </div>
</section>


<style>
  .natural-section {
    color: #fff;
    font-size: 1rem;
    line-height: 1.5;
    min-height: 100vh;
  }

  h1 {
    text-align: center;
    font-size: 2.5rem;
    padding-top: 2rem;
    margin-top: 0;
  }

  .grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem 2rem;
    max-width: 60rem;
    margin: 0 auto;
  }

  .card {
    display: flex;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 1rem;
    box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.2);
    overflow: hidden;
    align-items: center;
    gap: 1.25rem;
    padding: 1rem;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: scale(1.03);
    box-shadow: 0 0.375rem 0.75rem rgba(0,0,0,0.3);
  }

  .card img {
  width: 40vw;
  max-width: 20rem; /* antes 10rem */
  aspect-ratio: 4 / 3;
  object-fit: cover;
  border-radius: 0.75rem;
  flex-shrink: 0;
  box-shadow: 0 0.125rem 0.375rem rgba(0,0,0,0.3);
}


  .content {
    flex: 1;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: #fff;
  }

  p {
    margin: 0;
    color: #f0f0f0;
    font-size: 1rem;
    line-height: 1.4;
  }

  @media (max-width: 600px) {
    h1 {
      font-size: 2rem;
    }

    .card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .card img {
      width: 80vw;
      max-width: none;
      border-radius: 1rem 1rem 0 0;
    }

    .content {
      padding: 0 1rem 1rem;
    }

    h3 {
      font-size: 1.25rem;
    }

    p {
      font-size: 0.9rem;
    }
  }
</style>
