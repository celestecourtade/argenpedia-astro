<script is:inline>
  const questions = [
    {
      clue: "Vivimos en el noreste argentino. Usamos el algodón para hacer ropa.",
      options: ["Diaguita", "Qom", "Mapuche"],
      answer: "Qom"
    },
    {
      clue: "Vivimos en la región andina. Cultivamos maíz y usamos la cerámica.",
      options: ["Wichí", "Diaguita", "Guaraní"],
      answer: "Diaguita"
    },
    {
      clue: "Vivimos en la Patagonia. Usamos ponchos y criamos ganado.",
      options: ["Mapuche", "Qom", "Guaraní"],
      answer: "Mapuche"
    },
    {
      clue: "Vivimos en el noreste. Tomamos mate y usamos la selva como recurso.",
      options: ["Guaraní", "Diaguita", "Mapuche"],
      answer: "Guaraní"
    }
  ];

  let current = 0;
  let score = 0;

  function questionEl() { return document.getElementById("question"); }
  function optionsEl() { return document.getElementById("options"); }
  function feedbackEl() { return document.getElementById("feedback"); }
  function nextBtn() { return document.getElementById("next-btn"); }
  function scoreEl() { return document.getElementById("score"); }
  function lastScoreEl() { return document.getElementById("lastScore"); }

  function showQuestion() {
    feedbackEl().textContent = "";
    nextBtn().style.display = "none";
    const q = questions[current];
    questionEl().textContent = q.clue;

    optionsEl().innerHTML = "";
    q.options.forEach(option => {
      const btn = document.createElement("button");
      btn.textContent = option;
      btn.onclick = () => checkAnswer(option);
      optionsEl().appendChild(btn);
    });
  }

  function checkAnswer(selected) {
    const correct = questions[current].answer;
    if (selected === correct) {
      feedbackEl().textContent = "✅ ¡Correcto!";
      feedbackEl().style.color = "green";
      score++;
      scoreEl().textContent = "Puntaje actual: " + score;
    } else {
      feedbackEl().textContent = "❌ Incorrecto. Era " + correct + ".";
      feedbackEl().style.color = "red";
    }

    Array.from(optionsEl().children).forEach(btn => btn.disabled = true);
    nextBtn().style.display = "inline-block";
  }

  function nextQuestion() {
    current++;
    if (current < questions.length) {
      showQuestion();
    } else {
      questionEl().textContent = "🎉 ¡Juego terminado!";
      optionsEl().innerHTML = "";
      feedbackEl().textContent = `Tu puntaje final es ${score} de ${questions.length}`;
      nextBtn().style.display = "none";
      saveScore();
    }
  }

  function saveScore() {
    localStorage.setItem("puntaje-argenpedia", score);
  }

  function showLastScore() {
    const last = localStorage.getItem("puntaje-argenpedia");
    if (last !== null) {
      lastScoreEl().textContent = `Último puntaje guardado: ${last}`;
    }
  }

  window.onload = () => {
    showQuestion();
    showLastScore();
  };
</script>

  

</Layout>
