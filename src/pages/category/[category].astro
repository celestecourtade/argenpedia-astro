---
import categories from '@data/principal.json';
import Layout from '@layouts/Layout.astro';

export async function getStaticPaths() {
  return Object.keys(categories).map(category => ({
    params: { category }
  }));
}

const { category } = Astro.params;
const categoryData = categories[category];
---

<Layout>
<style>
html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  background: #3775b3;
}
.cards-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .cards-title {
    text-align: center;
    font-size: 2.5rem;
    color: #fcfcff;
    text-transform: capitalize;
    margin-bottom: 2rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .card-item {
    background-color: #00cafd;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease;
  }

  .card-item:hover {
    transform: translateY(-5px);
  }

  .card-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-content {
    padding: 1rem;
    text-align: center;
  }

  .card-content h2 {
    font-size: 1.4rem;
    color: #000000;
    margin-bottom: 0.5rem;
  }

  .card-content p {
    font-size: 1rem;
    color: #000000;
    line-height: 1.5;
  }

  .card-button {
  margin-top: 1rem;
  padding: 0.5rem 1rem;
  background-color: #ffff00;
  color: rgb(0, 0, 0);
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.card-button:hover {
  background-color: #cbc800;
}

</style>


<div class="cards-container">
    <h1 class="cards-title">{category}</h1>
  
    <div class="cards-grid">
      {categoryData.map(item => (
        <div class="card-item" key={item.id}>
          <img src={item.image} alt={item.title} />
          <div class="card-content">
            <h2>{item.title}</h2>
            <p>{item.content}</p>
            <a href={item.link}>
              <button class="card-button">Ver m√°s</button>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
  </Layout>